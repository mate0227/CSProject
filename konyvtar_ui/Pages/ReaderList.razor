@page "/readerlist"
@inject IReaderService ReaderService

@if (Reader is not null)
{
    <table class="table table-hover table-bordered">
        <thead>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>PublicationYear</th>
        <th></th>
        </thead>
        <tbody>
            @foreach (var reader in Reader)
            {
                <tr>
                    <td>@reader.Name</td>
                    <td>@reader.Address</td>
                    <td>@reader.BirthDate</td>
                    <td>
                        <a href="details/@reader.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    private IEnumerable<Reader>? Reader { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Reader = await ReaderService.GetReadersAsync();
    }
}