<EditForm Model="Book" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <InputText @bind-Value="Book.Title" class="form-control" />
        <ValidationMessage For="() => Book.Title" />
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <InputText @bind-Value="Book.Author" class="form-control" />
        <ValidationMessage For="() => Book.Author" />
    </div>
    <div class="mb-3">
        <label class="form-label">Publisher</label>
        <InputText @bind-Value="Book.Publisher" class="form-control" />
        <ValidationMessage For="() => Book.Publisher" />
    </div>
    <div class="mb-3">
        <label class="form-label">PublicationYear</label>
        <InputNumber @bind-Value="Book.PublicationYear" class="form-control" />
        <ValidationMessage For="() => Book.PublicationYear" />
    </div>

    <button type="submit" class="btn btn-primary form-control">@ButtonTitle</button>
</EditForm>

@code {
    [Parameter]
    public Book Book{ get; set; }

    [Parameter]
    public string ButtonTitle { get; set; }

    [Parameter]
    public Func<Task> OnValidSubmit { get; set; }
}